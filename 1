#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n;
    scanf("%d", &n);
    int *a = (int*)malloc(sizeof(int) * n);
    char ch[4];

    for(int i = 0; i < n; i++)
    {
        scanf("%d", &a[i]);
    }
    for(int i = 0; i < n; i++)
    {
        printf("%3d - ",a[i]);
        for (int j = 3; j >= 0; j--)
        {
            ch[j] = (a[i] % 2) + '0';
            a[i] >>= 1;
        }
        printf("%s\n", ch);

    }

    free(a);
    return 0;
}
